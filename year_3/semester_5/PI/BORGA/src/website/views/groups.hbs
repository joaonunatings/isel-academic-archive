<div class="save-group container">
    <div class="input-group mb-3" style="width: 130px; display:inline-flex">
        <input type="text" name="name" class="group-name form-control" placeholder="Group Name">
    </div>
    <div class="input-group mb-3" style="width: 200px; display:inline-flex">
        <input type="text" name="description" class="group-description form-control" placeholder="Group Description">
    </div>
    <div class="col-sm" style="width: 120px; display: inline-flex;">
        <button class="save-button btn btn-primary btn-block">Save</button>
    </div>
</div>
{{#if groups}}
    <hr>
    <div class="container">
        <table class="table table-striped table-bordered">
            <tr>
                <td style="text-align: center;">Group Name</td>
                <td style="text-align: center;">Description</td>
                <td style="text-align: center; width: 30%">Settings</td>
            </tr>
            {{#each groups}}
                <tr class="group-item" data-token="{{../userId}}">
                    <td style="text-align: center;">
                        <a href="/groups/{{groupId}}">{{name}}</a>
                    </td>
                    <td style="text-align: center;">{{#if description}}{{{description}}}{{else}}N/A{{/if}}</td>
                    <td style="text-align: center; width: 30%">
                        <button class="edit btn btn-warning btn-block" data-bs-toggle="modal" data-bs-target="#exampleModal" data-group-name="{{name}}" data-group-description="{{description}}" data-group-id="{{groupId}}">Edit Group</button>
                        <button class="delete btn btn-danger btn-block" data-group-id={{groupId}}>Delete Group</button>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
{{/if}}
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Group</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">New Group Name:</label>
                        <input type="text" class="form-control" id="recipient-name">
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">New Group Description:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <input type="hidden" class="modal-var-">
                <input type="hidden" class="">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="submit-edit btn btn-primary" data-group-id="_" data-bs-dismiss="modal">Submit</button>
            </div>
        </div>
    </div>
</div>