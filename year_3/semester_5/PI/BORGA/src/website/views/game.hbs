<iframe name="dummyframe" id="dummyframe" style="display: none;"></iframe>
{{#if game}}
    <div class="row mb-2" style="width: 100%;">
        <div class="col-sm-7">
            <h3 style="display: inline;">{{game.name}}</h3>
        </div>
        <div class="col-sm">
            <form action="/addGameToGroup" method="POST" target="dummyframe">
                <div>
                    <input type="hidden" name="gameId" class="form-control" value="{{game.id}}">
                </div>
                <div class="col-sm" style="width: 120px; display: inline-flex;">
                    <select class="form-select" name="groupId" autocomplete="off">
                        <option selected value="">Choose...</option>
                        {{#each groups}}
                            <option value={{groupId}}>{{{name}}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-sm" style="display: inline-flex;">
                    <button class="btn btn-primary btn-block" type="submit">Add to Group</button>
                </div>
            </form>
        </div>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{#if game.id}}{{{game.id}}}{{else}}N/A{{/if}}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{#if game.name}}{{{game.name}}}{{else}}N/A{{/if}}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{#if game.description}}{{{game.description}}}{{else}}N/A{{/if}}</td>
            </tr>
            <tr>
                <th>URL</th>
                <td>{{#if game.url}}
                        <a href={{game.url}}>{{game.url}}</a>
                    {{else}}N/A{{/if}}
                </td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{#if game.image}}
                        <img src={{game.image}} style="width: 180px; height: auto;" />
                    {{else}}N/A{{/if}}
                </td>
            </tr>
            <tr>
                <th>Mechanic(s)</th>
                <td>
                    {{#if game.mechanics}}
                        {{#each game.mechanics}}
                            {{this}}{{#unless @last}} & {{/unless}}
                        {{/each}}
                    {{else}} N/A {{/if}}
                </td>
            </tr>
            <tr>
                <th>Category(ies)</th>
                <td>
                    {{#if game.categories}}
                        {{#each game.categories}}
                            {{this}}{{#unless @last}} & {{/unless}}
                        {{/each}}
                    {{else}} N/A {{/if}}
                </td>
            </tr>
        </tbody>
    </table>
{{/if}}